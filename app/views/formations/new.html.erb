<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="form-inscription">
        <div class="inscription2">
          <div class="new-formation-card p-4">
            <%= simple_form_for([@formation]) do |f| %>
            <%= f.input :name, as: :string, label: "Nom de la Formation", input_html: { autocomplete: 'off' }, placeholder: "Nom de la formation", required: true %>
            <%= f.input :start_date, as: :date, label: "Début de la Formation", html5: true, required: true %>
            <%= f.input :end_date, as: :date, label: "Fin de la Formation", html5: true, required: true %>
            <%= f.submit "Crée ta formation", class: "btn btn-primary mb-3"%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>
</div>
